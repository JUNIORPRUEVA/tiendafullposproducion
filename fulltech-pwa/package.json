{
  "name": "fulltech-monorepo",
  "private": true,
  "workspaces": [
    "apps/api",
    "apps/web"
  ],
  "scripts": {
    "dev:api": "npm -w apps/api run start:dev",
    "dev:web": "npm -w apps/web run dev",
    "dev": "concurrently -n api,web -c blue,green \"npm run dev:api\" \"npm run dev:web\"",
    "prisma:migrate": "npm -w apps/api run prisma:migrate",
    "prisma:generate": "npm -w apps/api run prisma:generate",
    "seed": "npm -w apps/api run seed",
    "test:smoke": "npm -w apps/api run test:smoke",
    "build": "npm -w apps/api run build && npm -w apps/web run build",
    "lint": "echo \"No lint configured\""
  },
  "dependencies": {
    "react": "18.3.1",
    "react-dom": "18.3.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.4.9",
    "concurrently": "^9.2.0",
    "prisma": "^7.3.0"
  }
}
