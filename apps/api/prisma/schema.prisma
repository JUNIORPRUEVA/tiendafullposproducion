generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  ASISTENTE
  MARKETING
  VENDEDOR
  TECNICO
}

enum PunchType {
  ENTRADA_LABOR
  SALIDA_LABOR
  SALIDA_PERMISO
  ENTRADA_PERMISO
  SALIDA_ALMUERZO
  ENTRADA_ALMUERZO
}

enum CloseType {
  CAPSULAS
  POS
  TIENDA
}

model User {
  id               String   @id @default(uuid()) @db.Uuid
  email            String   @unique
  passwordHash     String
  nombreCompleto   String
  telefono         String
  edad             Int
  tieneHijos       Boolean  @default(false)
  estaCasado       Boolean  @default(false)
  casaPropia       Boolean  @default(false)
  vehiculo         Boolean  @default(false)
  licenciaConducir Boolean  @default(false)
  role             Role
  blocked          Boolean  @default(false)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  clients Client[]
  punches Punch[]
}

model Punch {
  id        String     @id @default(uuid()) @db.Uuid
  userId    String     @db.Uuid
  type      PunchType
  timestamp DateTime   @default(now())
  createdAt DateTime   @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([timestamp])
}

model Product {
  id        String   @id @default(uuid()) @db.Uuid
  nombre    String
  precio    Decimal  @db.Decimal(12, 2)
  costo     Decimal  @db.Decimal(12, 2)
  fotoUrl   String?
  categoryId String?  @db.Uuid
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  category  Category?  @relation(fields: [categoryId], references: [id], onDelete: SetNull)
}

model Category {
  id        String    @id @default(uuid()) @db.Uuid
  nombre    String    @unique
  createdAt DateTime  @default(now())
  products  Product[]
}

model Client {
  id        String   @id @default(uuid()) @db.Uuid
  ownerId   String   @db.Uuid
  nombre    String
  telefono  String
  email     String?
  direccion String?
  notas     String?
  isDeleted Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  owner User @relation(fields: [ownerId], references: [id], onDelete: Cascade)

  @@index([ownerId])
  @@index([ownerId, nombre])
  @@index([ownerId, telefono])
}

model Close {
  id            String    @id @default(uuid()) @db.Uuid
  type          CloseType
  date          DateTime  @default(now())
  status        String    // pending/draft/closed
  cash          Decimal   @db.Decimal(12, 2)
  transfer      Decimal   @db.Decimal(12, 2)
  card          Decimal   @db.Decimal(12, 2)
  expenses      Decimal   @db.Decimal(12, 2)
  cashDelivered Decimal   @db.Decimal(12, 2)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([date])
  @@index([type])
}
