generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  ASISTENTE
  MARKETING
  VENDEDOR
  TECNICO
}

enum PunchType {
  ENTRADA_LABOR
  SALIDA_LABOR
  SALIDA_PERMISO
  ENTRADA_PERMISO
  SALIDA_ALMUERZO
  ENTRADA_ALMUERZO
}

enum SaleStatus {
  DRAFT
  CONFIRMED
  CANCELLED
}

enum CloseType {
  CAPSULAS
  POS
  TIENDA
}

model User {
  id               String   @id @default(uuid()) @db.Uuid
  email            String   @unique
  passwordHash     String
  nombreCompleto   String
  telefono         String
  edad             Int
  tieneHijos       Boolean  @default(false)
  estaCasado       Boolean  @default(false)
  casaPropia       Boolean  @default(false)
  vehiculo         Boolean  @default(false)
  licenciaConducir Boolean  @default(false)
  role             Role
  blocked          Boolean  @default(false)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  sales  Sale[]  @relation("SaleSeller")
  punches Punch[]
}

model Punch {
  id        String     @id @default(uuid()) @db.Uuid
  userId    String     @db.Uuid
  type      PunchType
  timestamp DateTime   @default(now())
  createdAt DateTime   @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([timestamp])
}

model Product {
  id        String   @id @default(uuid()) @db.Uuid
  nombre    String
  precio    Decimal  @db.Decimal(12, 2)
  costo     Decimal  @db.Decimal(12, 2)
  fotoUrl   String?
  categoryId String?  @db.Uuid
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  saleItems SaleItem[]
  category  Category?  @relation(fields: [categoryId], references: [id], onDelete: SetNull)
}

model Category {
  id        String    @id @default(uuid()) @db.Uuid
  nombre    String    @unique
  createdAt DateTime  @default(now())
  products  Product[]
}

model Client {
  id        String   @id @default(uuid()) @db.Uuid
  nombre    String
  telefono  String
  email     String?
  direccion String?
  notas     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  sales Sale[]
}

model Sale {
  id         String      @id @default(uuid()) @db.Uuid
  sellerId   String      @db.Uuid
  clientId   String?     @db.Uuid
  status     SaleStatus  @default(DRAFT)
  note       String?
  soldAt     DateTime    @default(now())
  subtotal   Decimal     @db.Decimal(12, 2)
  totalCost  Decimal     @db.Decimal(12, 2)
  profit     Decimal     @db.Decimal(12, 2)
  commission Decimal     @db.Decimal(12, 2)
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt

  seller User    @relation("SaleSeller", fields: [sellerId], references: [id], onDelete: Cascade)
  client Client? @relation(fields: [clientId], references: [id], onDelete: SetNull)
  items  SaleItem[]

  @@index([sellerId])
  @@index([soldAt])
  @@index([status])
}

model SaleItem {
  id               String  @id @default(uuid()) @db.Uuid
  saleId           String  @db.Uuid
  productId        String  @db.Uuid
  qty              Int
  unitPriceSold    Decimal @db.Decimal(12, 2)
  unitCostSnapshot Decimal @db.Decimal(12, 2)
  lineTotal        Decimal @db.Decimal(12, 2)
  lineCost         Decimal @db.Decimal(12, 2)
  lineProfit       Decimal @db.Decimal(12, 2)

  sale    Sale    @relation(fields: [saleId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@index([saleId])
  @@index([productId])
}

model Close {
  id            String    @id @default(uuid()) @db.Uuid
  type          CloseType
  date          DateTime  @default(now())
  status        String    // pending/draft/closed
  cash          Decimal   @db.Decimal(12, 2)
  transfer      Decimal   @db.Decimal(12, 2)
  card          Decimal   @db.Decimal(12, 2)
  expenses      Decimal   @db.Decimal(12, 2)
  cashDelivered Decimal   @db.Decimal(12, 2)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([date])
  @@index([type])
}
